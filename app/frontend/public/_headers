# Cloudflare Pages Security Headers
# These headers are applied to all pages in production

/*
  # Content Security Policy - Production (no localhost)
  Content-Security-Policy: default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self'; connect-src 'self' https://*.supabase.co wss://*.supabase.co https://*.workers.dev; frame-src 'none'; object-src 'none'; base-uri 'self'; form-action 'self'; frame-ancestors 'none'; upgrade-insecure-requests;

  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff

  # Prevent clickjacking
  X-Frame-Options: DENY

  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin

  # Disable unnecessary browser features
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=(), usb=()

  # Cross-Origin policies
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin

  # HSTS - Force HTTPS (production only)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
